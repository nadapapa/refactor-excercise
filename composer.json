{
    "name": "nadapapa/refactor-excercise",
    "type": "project",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "mockery/mockery": "^1.3.1",
        "phpmd/phpmd": "^2.9",
        "pdepend/pdepend": "dev-master as 2.9.1",
        "phpunit/phpunit": "^9.3",
        "sebastian/phpcpd": "^6.0",
        "slevomat/coding-standard": "^6.4",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "./vendor/bin/phpunit --order-by=defects --stop-on-failure tests",
        "static": ["@syntax", "@php-cpd", "@php-cs", "@php-md", "@schema"],
        "schema": "@php artisan lighthouse:validate-schema",
        "syntax": "find ./app ./database ./tests -type f -name \"*.php\" -print0 | xargs -0 -n1 -P8 php -l",
        "php-cs": "@php vendor/bin/phpcs app/ --standard=phpcs_ruleset.xml",
        "php-cbf": "@php vendor/bin/phpcbf app/ --standard=phpcs_ruleset.xml",
        "php-md": "@php vendor/bin/phpmd app text phpmd_ruleset.xml || exit 1",
        "php-cpd": "@php vendor/bin/phpcpd --fuzzy app/"
    }
}
